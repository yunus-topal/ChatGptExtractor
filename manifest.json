{
  "manifest_version": 3,
  "name": "ChatGPT Dialogue Extractor",
  "version": "1.1",
  "description": "Extracts ChatGPT dialogue as JSON.",
  "permissions": [
    "scripting",
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*", "https://claude.ai/*", "https://chat.deepseek.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": ["https://chatgpt.com/*", "https://claude.ai/*", "https://chat.deepseek.com/*"]
}
